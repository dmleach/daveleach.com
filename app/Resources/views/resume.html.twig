{% extends "base.html.twig" %}

{% block body %}
<div class="row">
	<div class="8u 12u(mobile)">
		<article class="box post">
            <section>
                <h2>Resume</h2>
            </section>
            {% if jobs is defined %}
                <!-- <section> -->
                    <h3>Experience</h3>
                    {% for job in jobs %}
                        <section>
                        <h4>{{ job.company }}</h4>
                        {% if job.title is defined and job.title is not null %}
                            {{ job.title }}<br>
                        {% endif %}
                        {% if job.StartMonthYear is defined and job.EndMonthYear is defined %}
                            {% if job.StartMonthYear is not null and job.EndMonthYear is not null %}
                                {{ job.StartMonthYear }} to {{ job.EndMonthYear }}<br>
                            {% endif %}
                            {% if job.StartMonthYear is not null and job.EndMonthYear is null %}
                                {{ job.StartMonthYear }} to present<br>
                            {% endif %}
                            {% if job.StartMonthYear is null and job.EndMonthYear is not null %}
                                Through {{ job.EndMonthYear }}<br>
                            {% endif %}
                        {% endif %}
                        {% if job.accomplishments is defined and job.accomplishments is not null %}
                            {% for accomplishment in job.accomplishments %}
                                {{ accomplishment.description }}<br>
                            {% endfor %}
                        {% endif %}
                    </section>
                    {% endfor %}
                <!-- </section> -->
            {% endif %}
		</article>
	</div>
</div>
{% endblock %}
